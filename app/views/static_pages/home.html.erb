<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t ".fd" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t ".welcome_to_app" %></h1>
    <h2>
      <%= t ".home_page" %>
      <%= link_to t(".ror"), "http://www.railstutorial.org/" %>
      <%= t ".app" %>
    </h2>
    <%= link_to t(".signup_now"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
